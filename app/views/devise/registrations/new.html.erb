
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <header class="header">
    <a href="/">
      <div class="arrow"><</div>
    </a>

    <h2>REGISTER</h2>

    <div class="actions">
      <%= f.submit "Next", class: "btnn" %>
    </div>

  </header>

  <div class="field">
    <%= f.text_field :name, autofocus: true, class: "input", placeholder: "Full Name", autocomplete: "name" %>
  </div>  

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "input", placeholder: "Password",  autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class: "input", placeholder: "Confirm Password",  autocomplete: "new-password" %>
  </div>

<% end %>
